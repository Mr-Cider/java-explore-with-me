											"    const rnd = new RandomUtils();\r",
											"\r",
											"    if (typeof rnd.getComment !== 'function') {\r",
											"        rnd.getComment = function() {\r",
											"            return {\r",
											"                text: pm.variables.replaceIn('{{$randomLoremParagraph}}')\r",
											"            };\r",
											"        };\r",
											"    }\r",
											"\r",
											"    if (typeof api.addComment !== 'function') {\r",
											"        api.addComment = function(userId, eventId, comment, verbose = null) {\r",
											"            return this.post(\"/users/\" + userId + \"/events/\" + eventId + \"/comments\", comment, \"Ошибка при добавлении нового комментария\", verbose);\r",
											"        };\r",
											"    }\r",
											"\r",
											"    let moderationData;\r",
											"    try {\r",
											"        const user = await api.addUser(rnd.getUser());\r",
											"        const category = await api.addCategory(rnd.getCategory());\r",
											"        const event = await api.addEvent(user.id, rnd.getEvent(category.id));\r",
											"        const comment = rnd.getComment();\r",
											"        const createdComment = await api.addComment(user.id, event.id, comment);\r",
											"        pm.collectionVariables.set(\"cid\", createdComment.id);\r",
											"        \r",
											"        moderationData = {\r",
											"            text: pm.variables.replaceIn('{{$randomLoremParagraph}}') + \" [MODERATED]\"\r",
											"        };\r",
											"    } catch(err) {\r",
											"        console.error(\"Ошибка при подготовке тестовых данных.\", err);\r",
											"    }\r",
											"\r",
											"    pm.request.body.update({\r",
											"        mode: 'raw',\r",
											"        raw: JSON.stringify(moderationData),\r",
											"        options: { raw: { language: 'json' } }\r",
											"    });\r",
											"};\r",
											"\r",
											"const interval = setInterval(() => {}, 1000);\r",
											"\r",
											"setTimeout(async () => \r",
											"    {\r",
											"        try {\r",
											"            await main();\r",
											"        } catch (e) {\r",
											"            console.error(e);\r",
											"        } finally {\r",
											"            clearInterval(interval);\r",
											"        }\r",
											"    },  \r",
											"    100 \r",
											");"
